<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/mPhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:contentDescription="View for displaying image"
        app:srcCompat="@android:color/darker_gray" />

    <Button
        android:id="@+id/mCameraButton"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mPhotoImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:text="Start Camera"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/mGalleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mPhotoImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/mCameraButton"
        android:text="Select Photo"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/mDetectButton"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_below="@id/mPhotoImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="68dp"
        android:textColor="@color/white"
        android:text="Detect"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/mResultTextView"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_below="@+id/mDetectButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="70dp"
        android:padding="20dp"
        android:text="Default image set now..."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>